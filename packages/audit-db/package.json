{
	"name": "@repo/audit-db",
	"version": "0.1.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"audit-db": "./dist/cli.js",
		"audit-db-performance": "./dist/performance-cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"audit-db:generate": "drizzle-kit generate --config=drizzle-dev.config.ts",
		"audit-db:migrate": "drizzle-kit migrate --config=drizzle-dev.config.ts",
		"audit-db:monitor-summary": "tsx src/performance-cli.ts monitor summary",
		"audit-db:optimize": "tsx src/performance-cli.ts client optimize",
		"audit-db:partition-analyze": "tsx src/performance-cli.ts partition analyze",
		"audit-db:partition-create": "tsx src/performance-cli.ts partition create",
		"audit-db:performance": "tsx src/performance-cli.ts",
		"audit-db:retrieve": "tsx src/archival-cli.ts retrieve",
		"audit-db:rollback": "tsx src/cli.ts rollback",
		"audit-db:seed-policies": "tsx src/cli.ts seed-policies",
		"audit-db:seed-presets": "tsx src/cli.ts seed-presets",
		"audit-db:setup-partitions": "node scripts/setup-partitions.js",
		"audit-db:stats": "tsx src/archival-cli.ts stats",
		"audit-db:studio": "drizzle-kit studio --config=drizzle-dev.config.ts",
		"audit-db:validate": "tsx src/archival-cli.ts validate",
		"audit-db:verify": "tsx src/cli.ts verify",
		"audit-db:verify-compliance": "tsx src/cli.ts verify-compliance",
		"build": "tsc --build",
		"check-types": "tsc --noEmit",
		"check:lint": "eslint . --ext .ts",
		"clean": "rm -rf dist node_modules .turbo",
		"test": "vitest run",
		"test:ci": "vitest run --coverage",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@repo/logs": "workspace:*",
		"@repo/redis-client": "workspace:*",
		"commander": "^12.1.0",
		"drizzle-orm": "0.44.5",
		"ioredis": "5.8.0",
		"postgres": "3.4.7"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.9.0",
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "24.0.13",
		"drizzle-kit": "0.31.4",
		"typescript": "5.8.2",
		"vitest": "3.2.4"
	}
}
