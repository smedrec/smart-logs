	},
	"dependencies": {
		"@repo/redis-client": "workspace:*",
		"bullmq": "5.58.5",
		"ioredis": "5.7.0"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "24.0.13",
		"typescript": "5.5.4",
		"vitest": "3.2.4"
	}
}
