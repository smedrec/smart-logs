{
	"name": "@repo/send-mail",
	"version": "0.1.0",
	"private": true,
	"description": "Email Sending Utility Package",
	"sideEffects": false,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc --build",
