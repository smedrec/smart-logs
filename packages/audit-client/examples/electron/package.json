{
	"name": "@smedrec/audit-client-electron-example",
	"version": "1.0.0",
	"private": true,
	"description": "Electron integration example for @smedrec/audit-client",
	"main": "dist/main/main.js",
	"scripts": {
		"build": "npm run build:main && npm run build:renderer",
		"build:main": "tsc -p tsconfig.main.json",
		"build:renderer": "webpack --config webpack.renderer.js --mode production",
		"dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
		"dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
		"dev:renderer": "webpack serve --config webpack.renderer.js",
		"lint": "eslint src --ext .ts,.tsx",
		"package": "electron-builder",
		"package:dir": "electron-builder --dir",
		"test": "jest"
	},
	"dependencies": {
		"@smedrec/audit-client": "workspace:*",
		"electron-log": "^5.0.1",
		"electron-store": "^8.1.0",
		"electron-updater": "^6.1.7"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"@types/react": "^18.2.43",
		"@types/react-dom": "^18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"concurrently": "^8.2.2",
		"electron": "^27.1.3",
		"electron-builder": "^24.8.1",
		"eslint": "^8.54.0",
		"html-webpack-plugin": "^5.5.4",
		"jest": "^29.7.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"ts-jest": "^29.1.1",
		"ts-loader": "^9.5.1",
		"typescript": "^5.3.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"webpack-dev-server": "^4.15.1"
	},
	"build": {
		"appId": "com.smedrec.audit-client-example",
		"productName": "Audit Client Example",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"node_modules/**/*"
		],
		"mac": {
			"category": "public.app-category.developer-tools"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	}
}
