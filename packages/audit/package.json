{
	"name": "@repo/audit",
	"version": "0.1.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"audit-archival": "./dist/archival-cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"audit-db:archive": "tsx src/archival/archival-cli.ts archive",
		"audit-db:cleanup": "tsx src/archival/archival-cli.ts cleanup",
		"audit-db:delete": "tsx src/archival/archival-cli.ts delete",
		"build": "tsc --build",
		"check-types": "tsc --noEmit",
		"check:lint": "eslint . --ext .ts",
		"clean": "rm -rf dist node_modules .turbo",
		"config:create": "tsx src/cli.ts create development",
		"test": "vitest run",
		"test:all": "vitest run",
		"test:chaos": "vitest run src/__tests__/chaos-engineering.test.ts",
		"test:ci": "vitest run --coverage",
		"test:ci-suite": "vitest run src/__tests__/ci-test-suite.test.ts",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "vitest run src/__tests__/e2e-integration.test.ts",
		"test:external-deps": "vitest run src/__tests__/external-dependencies-integration.test.ts",
		"test:integration": "vitest run src/__tests__/integration.test.ts",
		"test:load": "vitest run src/__tests__/load-testing.test.ts",
		"test:runner": "./scripts/run-tests.sh",
		"test:unit": "vitest run src/**/*.test.ts --exclude src/__tests__/*.test.ts",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "3.859.0",
		"@aws-sdk/client-ses": "3.859.0",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/api-metrics": "^0.33.0",
		"@opentelemetry/auto-instrumentations-node": "^0.65.0",
		"@opentelemetry/exporter-jaeger": "^2.1.0",
		"@opentelemetry/exporter-metrics-otlp-http": "^0.206.0",
		"@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
		"@opentelemetry/instrumentation": "^0.206.0",
		"@opentelemetry/resources": "^2.1.0",
		"@opentelemetry/sdk-metrics": "^2.1.0",
		"@opentelemetry/sdk-node": "^0.206.0",
		"@opentelemetry/semantic-conventions": "^1.37.0",
		"@repo/audit-db": "workspace:*",
		"@repo/infisical-kms": "workspace:*",
		"@repo/logs": "workspace:*",
		"@repo/redis-client": "workspace:*",
		"@types/ssh2-sftp-client": "^9.0.5",
		"bullmq": "5.58.5",
		"dotenv": "17.2.0",
		"drizzle-orm": "0.44.5",
		"inngest": "3.40.2",
		"ioredis": "5.8.0",
		"nodemailer": "6.9.15",
		"postgres": "3.4.7",
		"ssh2-sftp-client": "^12.0.1"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "24.0.13",
		"@types/nodemailer": "6.4.19",
		"typescript": "5.8.2",
		"vitest": "3.2.4"
	}
}
