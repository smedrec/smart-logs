{
	"name": "@repo/logs",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"benchmark": "pnpm run build && node dist/benchmarks/logging-benchmarks.js",
		"build": "tsc --build",
		"check-types": "tsc --noEmit",
		"clean": "rm -rf dist node_modules",
		"example": "pnpm run example:up && pnpm run example:run && pnpm run example:down",
		"example:down": "cd examples && docker compose down",
		"example:run": "pnpm run build && node ./scripts/run-example-dist.mjs",
		"example:up": "cd examples && docker compose up -d",
		"lint": "eslint . --ext .ts",
		"test": "vitest --run",
		"test:coverage": "vitest --run --coverage",
		"test:performance": "vitest --run src/__tests__/performance.test.ts",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@opentelemetry/api-logs": "^0.206.0",
		"@opentelemetry/exporter-logs-otlp-http": "^0.206.0",
		"@opentelemetry/resources": "^2.1.0",
		"@opentelemetry/semantic-conventions": "^1.37.0",
		"chalk": "^5.6.2",
		"dotenv": "17.2.0",
		"ioredis": "5.8.0",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@repo/eslint-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "9.27.0",
		"typescript": "5.8.2",
		"vitest": "^3.2.4"
	}
}
